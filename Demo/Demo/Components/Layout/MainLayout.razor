            <MudButton StartIcon="@Icons.Material.Outlined.Work"><p class="appbar-btn">Works</p></MudButton>
            <MudButton StartIcon="@Icons.Material.Outlined.ContactSupport"><p class="appbar-btn">Contact</p></MudButton>
        </MudToolBar>
    </MudAppBar>
    <div>
     <MudMainContent>
